{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create Default Files",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/create-layout.js",
        "${input:parentFolder}",
        "${input:newFolderName}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "parentFolder",
      "type": "promptString",
      "description": "상위 폴더 이름을 입력하세요 (예: app)"
    },
    {
      "id": "newFolderName",
      "type": "promptString",
      "description": "생성할 새 폴더 이름을 입력하세요 (예: (tabs))"
    }
  ]
}
